<?xml version="1.0" encoding="utf-8" standalone="no"?>
<GUI name="optionsWaterSources">
    <GuiElement type="empty" profile="uiInGameMenuFrame">
        <!-- Static page header -->
        <GuiElement type="empty" profile="ingameMenuFrameHeaderPanel">
            <GuiElement type="bitmap" profile="ingameMenuGeneralSettingsHeaderIcon" />
            <GuiElement type="text" profile="ingameMenuFrameHeaderText" text="Water Source Settings" />
        </GuiElement>

        <!-- Layout content box -->
        <GuiElement type="empty" profile="ingameMenuSettingsBox" id="settingsContainer">
            <GuiElement type="bitmap" profile="topScrollClipper" name="topClipper" />
            <GuiElement type="bitmap" profile="bottomScrollClipper" name="bottomClipper" />
            <GuiElement type="scrollingLayout" profile="ingameMenuSettingsLayout" id="boxLayout" topClipperElementName="topClipper" bottomClipperElementName="bottomClipper">
                
                <!-- Water Sources Enabled -->
                <GuiElement type="checkedOption" profile="multiTextOptionSettings" onClick="onCheckClick" id="waterSourcesEnabled">
                    <GuiElement type="button" profile="multiTextOptionSettingsLeft" />
                    <GuiElement type="button" profile="multiTextOptionSettingsRight" />
                    <GuiElement type="text" profile="multiTextOptionSettingsText" />
                    <GuiElement type="text" profile="multiTextOptionSettingsTitle" text="Enable Water Sources" />
                    <GuiElement type="bitmap" profile="multiTextOptionSettingsBg" />
                    <GuiElement type="text" profile="multiTextOptionSettingsTooltip" text="Enable water source detection and usage" />
                </GuiElement>

                <!-- Well Water -->
                <GuiElement type="checkedOption" profile="multiTextOptionSettings" onClick="onCheckClick" id="waterSourcesWellWaterEnabled">
                    <GuiElement type="button" profile="multiTextOptionSettingsLeft" />
                    <GuiElement type="button" profile="multiTextOptionSettingsRight" />
                    <GuiElement type="text" profile="multiTextOptionSettingsText" />
                    <GuiElement type="text" profile="multiTextOptionSettingsTitle" text="Use Well Water" />
                    <GuiElement type="bitmap" profile="multiTextOptionSettingsBg" />
                    <GuiElement type="text" profile="multiTextOptionSettingsTooltip" text="Allow using well water for irrigation" />
                </GuiElement>

                <!-- River Water -->
                <GuiElement type="checkedOption" profile="multiTextOptionSettings" onClick="onCheckClick" id="waterSourcesRiverWaterEnabled">
                    <GuiElement type="button" profile="multiTextOptionSettingsLeft" />
                    <GuiElement type="button" profile="multiTextOptionSettingsRight" />
                    <GuiElement type="text" profile="multiTextOptionSettingsText" />
                    <GuiElement type="text" profile="multiTextOptionSettingsTitle" text="Use River Water" />
                    <GuiElement type="bitmap" profile="multiTextOptionSettingsBg" />
                    <GuiElement type="text" profile="multiTextOptionSettingsTooltip" text="Allow using river water for irrigation" />
                </GuiElement>

                <!-- Rainwater -->
                <GuiElement type="checkedOption" profile="multiTextOptionSettings" onClick="onCheckClick" id="waterSourcesRainwaterEnabled">
                    <GuiElement type="button" profile="multiTextOptionSettingsLeft" />
                    <GuiElement type="button" profile="multiTextOptionSettingsRight" />
                    <GuiElement type="text" profile="multiTextOptionSettingsText" />
                    <GuiElement type="text" profile="multiTextOptionSettingsTitle" text="Use Rainwater" />
                    <GuiElement type="bitmap" profile="multiTextOptionSettingsBg" />
                    <GuiElement type="text" profile="multiTextOptionSettingsTooltip" text="Allow collecting and using rainwater" />
                </GuiElement>

                <!-- Water Tank Refill -->
                <GuiElement type="checkedOption" profile="multiTextOptionSettings" onClick="onCheckClick" id="waterSourcesWaterTankRefill">
                    <GuiElement type="button" profile="multiTextOptionSettingsLeft" />
                    <GuiElement type="button" profile="multiTextOptionSettingsRight" />
                    <GuiElement type="text" profile="multiTextOptionSettingsText" />
                    <GuiElement type="text" profile="multiTextOptionSettingsTitle" text="Auto Refill Water Tanks" />
                    <GuiElement type="bitmap" profile="multiTextOptionSettingsBg" />
                    <GuiElement type="text" profile="multiTextOptionSettingsTooltip" text="Automatically refill water tanks from sources" />
                </GuiElement>

                <!-- Max Water Distance -->
                <GuiElement type="empty" profile="ingameMenuGameSettingsTextInputWrapper">
                    <GuiElement type="textInput" profile="ingameMenuGameSettingsTextInput" id="waterSourcesMaxWaterDistance" onEnterPressed="onEnterPressedTextInput" imeDescription="50-500" imePlaceholder="Meters" imeTitle="Max Water Distance" imeKeyboardType="normal" />
                    <GuiElement type="text" profile="multiTextOptionSettingsTitle" text="Max Water Distance (50-500m)" />
                    <GuiElement type="text" profile="multiTextOptionSettingsTooltip" text="Maximum distance to search for water sources" />
                </GuiElement>

                <!-- Pump Speed -->
                <GuiElement type="empty" profile="ingameMenuGameSettingsTextInputWrapper">
                    <GuiElement type="textInput" profile="ingameMenuGameSettingsTextInput" id="waterSourcesPumpSpeed" onEnterPressed="onEnterPressedTextInput" imeDescription="0.1-5.0" imePlaceholder="Speed" imeTitle="Pump Speed" imeKeyboardType="normal" />
                    <GuiElement type="text" profile="multiTextOptionSettingsTitle" text="Pump Speed (0.1-5.0)" />
                    <GuiElement type="text" profile="multiTextOptionSettingsTooltip" text="Water pump speed multiplier" />
                </GuiElement>

                <!-- Show Water Info -->
                <GuiElement type="checkedOption" profile="multiTextOptionSettings" onClick="onCheckClick" id="waterSourcesShowWaterInfo">
                    <GuiElement type="button" profile="multiTextOptionSettingsLeft" />
                    <GuiElement type="button" profile="multiTextOptionSettingsRight" />
                    <GuiElement type="text" profile="multiTextOptionSettingsText" />
                    <GuiElement type="text" profile="multiTextOptionSettingsTitle" text="Show Water Info" />
                    <GuiElement type="bitmap" profile="multiTextOptionSettingsBg" />
                    <GuiElement type="text" profile="multiTextOptionSettingsTooltip" text="Show water source information on screen" />
                </GuiElement>

                <!-- Debug Mode -->
                <GuiElement type="checkedOption" profile="multiTextOptionSettings" onClick="onCheckClick" id="waterSourcesDebugMode">
                    <GuiElement type="button" profile="multiTextOptionSettingsLeft" />
                    <GuiElement type="button" profile="multiTextOptionSettingsRight" />
                    <GuiElement type="text" profile="multiTextOptionSettingsText" />
                    <GuiElement type="text" profile="multiTextOptionSettingsTitle" text="Debug Mode" />
                    <GuiElement type="bitmap" profile="multiTextOptionSettingsBg" />
                    <GuiElement type="text" profile="multiTextOptionSettingsTooltip" text="Enable debug logging for water system" />
                </GuiElement>

            </GuiElement>
        </GuiElement>
    </GuiElement>
</GUI>